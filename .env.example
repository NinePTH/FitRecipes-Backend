# Environment
NODE_ENV=development # development | staging | production
PORT=3000

# Database Configuration
# For Supabase (Production/Staging):
DATABASE_URL="postgresql://postgres.project-ref:password@region.pooler.supabase.com:6543/postgres?pgbouncer=true&schema=public"
DIRECT_URL="postgresql://postgres:password@db.project-ref.supabase.co:5432/postgres?schema=public"

# For Local Development (alternative):
# DATABASE_URL="postgresql://postgres:password@localhost:5432/fitrecipes"

# Supabase Configuration
# Get these from: Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Storage Bucket Names by Environment
# Development: recipe-images-dev
# Staging: recipe-images-staging  
# Production: recipe-images
SUPABASE_STORAGE_BUCKET=recipe-images

# Firebase Admin SDK Configuration (for push notifications)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# JWT Configuration
# Use different secrets for each environment
JWT_SECRET=your_super_secure_jwt_secret_at_least_64_characters_long
JWT_EXPIRES_IN=7d

# Email Service Configuration (Resend)
# Leave RESEND_API_KEY empty for development mode (emails logged to console)
# Set RESEND_API_KEY to enable actual email sending in production
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=
EMAIL_FROM=noreply@fitrecipes.com

# Google OAuth Configuration
# Get these from: Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Application URLs
# Development
BACKEND_URL=http://localhost:3000
FRONTEND_URL=http://localhost:5173

# Staging
# BACKEND_URL=https://fitrecipes-backend-staging.onrender.com
# FRONTEND_URL=http://localhost:5173  # No staging frontend yet
# CORS_ORIGIN=http://localhost:5173

# Production
# BACKEND_URL=https://fitrecipes-backend.onrender.com
# FRONTEND_URL=https://fitrecipes.vercel.app
# CORS_ORIGIN=https://fitrecipes.vercel.app

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
# Comma-separated list of allowed origins
# Development: Allow local frontend
CORS_ORIGIN=http://localhost:5173
# Production: Use your production frontend URL
# CORS_ORIGIN=https://fitrecipes.vercel.app
# Multiple origins (staging + production):
# CORS_ORIGIN=https://fitrecipes.vercel.app,https://staging.fitrecipes.com