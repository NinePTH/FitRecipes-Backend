{
  "name": "fitrecipes-backend",
  "version": "1.0.0",
  "description": "Backend API for FitRecipes - Healthy Recipes Web Application",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "dev:setup": "bun run db:generate && bun run db:push && bun run dev",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "start": "NODE_ENV=production bun run dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" \"scripts/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" \"tests/**/*.ts\" \"scripts/**/*.ts\" --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"scripts/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"scripts/**/*.ts\"",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:seed": "bun run scripts/create-test-users.ts",
    "docker:build": "docker build -t fitrecipes-backend .",
    "docker:run": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "hono",
    "typescript",
    "bun",
    "prisma",
    "supabase",
    "recipes",
    "api"
  ],
  "author": "FitRecipes Team",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "^1.12.0",
    "@hono/oauth-providers": "^0.8.5",
    "@prisma/client": "^5.19.1",
    "@supabase/supabase-js": "^2.45.4",
    "bcryptjs": "^2.4.3",
    "hono": "^4.5.11",
    "jsonwebtoken": "^9.0.2",
    "resend": "^6.1.2",
    "sharp": "^0.34.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^22.5.4",
    "@types/sharp": "^0.32.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "prisma": "^5.19.1",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  },
  "engines": {
    "bun": ">=1.0.0"
  }
}